        async function copyToClipboard(kind) {
          const addrEl = document.getElementById(`addr-${kind}`);
          const msgEl = document.getElementById(`msg-${kind}`);
          if (!addrEl) return;

          const address = (addrEl.dataset.address || addrEl.textContent || '').trim();

          const showMsg = (m) => {
            if (!msgEl) return;
            msgEl.textContent = m;
            clearTimeout(msgEl._t);
            msgEl._t = setTimeout(() => (msgEl.textContent = ''), 2500);
          };

          try {
            await navigator.clipboard.writeText(address);
            showMsg('Copied to clipboard.');
          } catch {
            try {
              const ta = document.createElement('textarea');
              ta.value = address;
              ta.setAttribute('readonly', '');
              ta.style.position = 'absolute';
              ta.style.left = '-9999px';
              document.body.appendChild(ta);
              ta.select();
              document.execCommand('copy');
              document.body.removeChild(ta);
              showMsg('Copied to clipboard.');
            } catch {
              showMsg('Copy failed. Please copy manually.');
            }
          }
        }
